{
  "manifest_version": 3,
  "name": "Navigraph",
  "version": "1.0.0",
  "description": "AI-Powered Browsing Analytics",
  "icons": {
    "16": "images/logo-16.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "dist/background/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "images/logo-16.png",
      "48": "images/logo-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/navigraph-tracker.js"],
      "type": "module",
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/content/*", "dist/content/styles/*.css", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "dist/options/index.html",
    "open_in_tab": true
  }
}